<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
     <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/0ea1809b33.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class= "shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <a class="navbar-brand p-3" href="/"><font color="Black">ロゴ</font></a>
        <div class = "collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
                <!--管理者用のヘッダー-->
                <% if customer_signed_in? %>
                  <li class="nav-item"><%= link_to "マイページ",customers_show_path(current_customer.id) %></li>
                  <li class="nav-item"><%= link_to "商品一覧",items_path%></li>
                  <li class="nav-item"><%= link_to "カート",cart_items_path%></li>
                  <li class="nav-item"><%= link_to "ログアウト",destroy_admin_session_path, method: :delete%></li>
                <% elsif admin_signed_in? %>
                　<li class="nav-item"><%= link_to "商品一覧",admin_items_path%></li>
                  <li class="nav-item"><%= link_to "会員一覧",admin_customers_path%></li>
                  <li class="nav-item"><%= link_to "注文履歴一覧",admin_orders_path%></li>
                  <li class="nav-item"><%= link_to "ジャンル一覧",admin_genres_path%></li>
                  <li class="nav-item"><%= link_to "ログアウト",destroy_admin_session_path, method: :delete%></li>
                <% else %>
                  <li class="nav-item"><%= link_to "About",about_path%></li>
                  <li class="nav-item"><%= link_to "商品一覧",items_path%></li>
                  <li class="nav-item"><%= link_to "新規登録",new_customer_registration_path%></li>
                  <li class="nav-item"><%= link_to "ログイン",new_customer_session_path%></li>
                <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
