<html>
  <head>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>
  <body>
    <h1>商品詳細</h1>
    <div class="container">
       <div class="row">
        <div class="col-md-3">
          <%= image_tag @item.get_image(100,100) %>
        </div>

        <div class="col-md-8 offset-md-1">
          <div>商品名:<%=@item.name%></div>
          <div>商品説明:<%=@item.introduction%></div>
          <div>ジャンル:<%=@item.genre.name%></div>
          <div>税込み価格(税抜き価格):<%=@item.with_tax_price%>(<%=@item.price%>)円</div>
          <div><%= link_to "編集する",edit_admin_item_path(@item.id),class: 'btn btn-success'%></div>
        </div>
      </div>
    </div>
  </body>
</html>
