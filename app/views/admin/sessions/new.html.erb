<div>
  <%= flash[:notice] %>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row my-3">
    <label class="col-sm-4"><h2>Log in</h2></label>
  </div>

    <div class="form-group row my-3">
    <label class="col-sm-5">管理者ログイン</label>
    <label class="col-sm-2"></label>
    </div>

   <div class="form-group row my-3">
    <label class="col-sm-4"> <%= f.label :email %></label>
    <label class="col-sm-2"><%= f.email_field :email, autofocus: true, autocomplete: "email" ,size:30%></label>
</div>

<div class="form-group row my-3">
    <label class="col-sm-4">  <%= f.label :password %></label>
    <label class="col-sm-2"><%= f.password_field :password, autocomplete: "current-password",size:30 %></label>
</div>

<div class="actions">
<div class="form-group row my-3">
    <label class="col-sm-4"></label>
    <label class="col-sm-2"><%= f.submit "ログイン" ,　class: 'btn-primary btn-lg' %></label>
</div>
</div>
<% end %>

</form>
