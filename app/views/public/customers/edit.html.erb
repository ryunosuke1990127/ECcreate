<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>

 <body>
   <div class="container">
       <div class="row">
        <div class="mx-auto">
          <h1>会員情報編集</h1>
          <%= form_with model: @user, url: customers_infomation_path, method: :PATCH do |f| %>
            <div>氏名<%= f.text_field :first_name%> <%= f.text_field :last_name%></div>
            <div>フリガナ<%= f.text_field :first_name_kana%> <%= f.text_field :last_name_kana%></div>
            <div>郵便番号<%= f.text_field :postal_code%></div>
            <div>住所<%= f.text_field :address%></div>
            <div>電話番号<%= f.text_field :telephone_number%></div>
            <div>メールアドレス<%= f.text_field :email%></div>
            <p><%= f.submit "編集内容を保存" %></p>
          <% end %>
          <%=link_to "退会する",customers_withdraw_check_path %>
　　　　　</div>
         </div>
      </div>
  </body>
 </html>