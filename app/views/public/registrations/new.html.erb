<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>

 <body>
          <div>
            <!--退会済みでログインしようとしたときのメッセージ-->
            <%= flash[:notice] %>
　　　　　</div>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "public/shared/error_messages", resource: resource %>

              <form class="form-horizontal">

                <div class="form-group row my-3">
                <label class="col-sm-4"><h2>新規会員登録</h2></label>
              </div>


                <div class="form-group row my-3">
                <label class="col-sm-4">名前</label>
                 <label class="col-sm-4">
                   (姓) <%= f.text_field :first_name, autofocus: true, placeholder: "令和" %>
                   (名)<%= f.text_field :last_name, autofocus: true, placeholder: "道子" %>
                 </label>
                </div>

                <div class="form-group row my-3">
                  <label class="col-sm-4">フリガナ</label>
                   <label class="col-sm-4">
                    (セイ)<%= f.text_field :first_name_kana, autofocus: true, placeholder: "レイワ" %>
                    (メイ)<%= f.text_field :last_name_kana, autofocus: true, placeholder: "ミチコ" %>
                   </label>
                </div>

              <div class="form-group row my-3">
                <label class="col-sm-4">メールアドレス</label>
                　<label class="col-sm-2"><%= f.email_field :email, autofocus: true,placeholder: "sample@example.com" ,size:30%> </label>
              </div>

                <div class="form-group row my-3">
                <label class="col-sm-4">郵便番号(ハイフンなし)</label>
                　<label class="col-sm-2"><%= f.text_field :postal_code, autofocus: true,placeholder: "00000000" %></label>
              </div>

                <div class="form-group row my-3">
                  <label class="col-sm-4">住所</label>
                    <label class="col-sm-2"><%= f.text_field :address,size: 30 , autofocus: true,placeholder: "東京都渋谷区代々木神園町0-0",size:30 %></label>
              </div>

                <div class="form-group row my-3">
                <label class="col-sm-4">電話番号(ハイフンなし)</label>
                　<label class="col-sm-2"><%= f.text_field :telephone_number, autofocus: true,placeholder: "000000000" %></label>
              </div>

                 <div class="form-group row my-3">
                <label class="col-sm-4"><%= f.label :password %>
                　<% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em></label>
                <% end %>
                <label class="col-sm-2"><%= f.password_field :password, autocomplete: "new-password" %></label>
              </div>

              <div class="form-group row my-3">
                <label class="col-sm-4"><%= f.label :password_confirmation %></label>
                　<label class="col-sm-2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></label>
              </div>

              <div class="form-group row my-3">
                <label class="col-sm-4"><%= f.submit "新規登録", class: 'btn btn-success'%></label>
              </div>
            <% end %>

             <div class="form-group row my-3">
                <label class="col-sm-4">すでに登録済みの方はこちら</label>
                <br><%= link_to"ログイン",new_customer_session_path  %>
            </div>
          </form>
      </body>
 </html>




