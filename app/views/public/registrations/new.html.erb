<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


  <div class="field">
    名前: (姓)<%= f.text_field :first_name, autofocus: true, placeholder: "令和" %>
          (名)<%= f.text_field :last_name, autofocus: true, placeholder: "道子" %>
  </div>

   <div class="field">
    フリガナ: (セイ)<%= f.text_field :first_name_kana, autofocus: true, placeholder: "レイワ" %>
              (メイ)<%= f.text_field :last_name_kana, autofocus: true, placeholder: "ミチコ" %>
  </div>

  <div class="field">
    メールアドレス<%= f.email_field :email, autofocus: true,placeholder: "sample@example.com" %>
  </div>

  <div class="field">
    郵便番号(ハイフンなし)<%= f.text_field :postal_code, autofocus: true,placeholder: "00000000" %>
  </div>

  <div class="field">
    住所<%= f.text_field :address,size: 30 , autofocus: true,placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    電話番号(ハイフンなし)<%= f.text_field :telephone_number, autofocus: true,placeholder: "000000000" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録"%>
  </div>
<% end %>

<%= render "public/shared/links" %>
